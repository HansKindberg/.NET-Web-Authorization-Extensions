<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="robots" content="noindex,nofollow" />
		@if(IsSectionDefined("Title"))
		{
			@RenderSection("Title")
		}
		else
		{
			<title>Authorization example</title>
		}
		<link asp-append-version="true" href="~/Style/Site.min.css" rel="stylesheet" />
	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
			<a class="navbar-brand" href="/">
				<img alt="Logo" src="/Style/Images/logo-32x32.png" />
			</a>
			<button aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navigation" data-toggle="collapse" type="button">
				<svg class="size-1-point-4-rem" role="presentation">
					<use xlink:href="/Style/Icons/sprite.svg#list" />
				</svg>
			</button>
			<div class="collapse navbar-collapse" id="navigation">
				<ul class="navbar-nav">
					<li class="nav-item@(Html.IsActive("Index") ? " active" : null)">
						<a asp-action="Index" asp-controller="Home" class="nav-link">Home</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForFirstPermission") ? " active" : null)">
						<a asp-action="OnlyForFirstPermission" asp-controller="Home" class="nav-link">Only for first permission</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForSecondPermission") ? " active" : null)">
						<a asp-action="OnlyForSecondPermission" asp-controller="Home" class="nav-link">Only for second permission</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForThirdPermission") ? " active" : null)">
						<a asp-action="OnlyForThirdPermission" asp-controller="Home" class="nav-link">Only for third permission</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForFirstRole") ? " active" : null)">
						<a asp-action="OnlyForFirstRole" asp-controller="Home" class="nav-link">Only for first role</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForSecondRole") ? " active" : null)">
						<a asp-action="OnlyForSecondRole" asp-controller="Home" class="nav-link">Only for second role</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForThirdRole") ? " active" : null)">
						<a asp-action="OnlyForThirdRole" asp-controller="Home" class="nav-link">Only for third role</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForFourthRole") ? " active" : null)">
						<a asp-action="OnlyForFourthRole" asp-controller="Home" class="nav-link">Only for fourth role</a>
					</li>
					<li class="nav-item@(Html.IsActive("OnlyForFifthRole") ? " active" : null)">
						<a asp-action="OnlyForFifthRole" asp-controller="Home" class="nav-link">Only for fifth role</a>
					</li>
				</ul>
				<ul class="navbar-nav ml-auto">
					@if(User.Identity != null && User.Identity.IsAuthenticated)
					{
						<li class="nav-item dropdown active">
							<a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="identity-dropdown">
								<svg class="size-1-point-2-rem" role="presentation">
									<use xlink:href="/Style/Icons/sprite.svg#person" />
								</svg>
								@User.Identity.Name
							</a>
							<div aria-labelledby="identity-dropdown" class="dropdown-menu right">
								<a asp-action="Index" asp-controller="Account" class="dropdown-item@(Html.IsActive("Index", "Account") ? " active" : null)">Your identity</a>
								<a asp-action="SignOut" asp-controller="Account" class="dropdown-item">Sign out</a>
							</div>
						</li>
					}
					else
					{
						<li class="nav-item active">
							<a asp-action="SignIn" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path" class="nav-link">
								Sign in
							</a>
						</li>
					}
				</ul>
			</div>
		</nav>
		<main class="container-md mb-4" role="main">
			@RenderBody()
		</main>
		<script asp-append-version="true" src="~/Scripts/Site.min.js"></script>
	</body>
</html>